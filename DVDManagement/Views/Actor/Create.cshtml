@using DVDManagement.ViewModel
@model CreateActorViewModel

<div class="row orderForm">
    <form asp-controller="Actor" asp-action="Create" method="post" class="form-horizontal" role="form">
        @Html.HiddenFor(x => x.Referer)
        <h3 class="col-md-offset-2">Create new author</h3>
        <div class="form-group">
            <label asp-for="Actor.Name" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Actor.Name" class="form-control" placeholder="Enter authors name" />
                <span asp-validation-for="Actor.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Actor" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>